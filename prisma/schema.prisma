model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String  @unique
  name  String?
  hash  String
  todos Todos[]

  todosCount Int @default(0)
}

model Todos {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  title  String
  done   Boolean @default(false)
  user   User    @relation(fields: [userId], references: [id])
  userId Int
}
